<%- include('partials/_header.ejs') %>

<div class="container">

  <div class="row">
    <!-- formulario -->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">

          <form action="/edit/<%=task.id%>" method="POST">
            <div class="form-group">
              <!-- tratar que sean los mismos nombres que hay en el modelo -->
              <input type="text" name="title" placeholder="Inserta un titulo" class="form-control"
                value="<%=task.title%>" required>
            </div>
            <div class="form-group">
              <textarea name="description" placeholder="Inserta una descripcion" class="form-control" required><%=task.description%></textarea>
            </div>
            <button type="submit" class="btn btn-block btn-primary">Modificar</button>
          </form>

        </div>
      </div>
    </div>

  </div>


</div>

<%- include('partials/_footer.ejs') %>